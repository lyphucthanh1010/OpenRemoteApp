<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvnumber2"
            android:layout_width="66dp"
            android:layout_height="81dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rtlFood"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background2">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDining"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_below="@+id/tvname"
                android:layout_alignLeft="@+id/tvname"
                android:layout_marginBottom="10dp"
                android:src="@drawable/icontype" />

            <TextView
                android:id="@+id/tvtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivDining"
                android:layout_alignBottom="@+id/ivDining"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivDining"
                android:gravity="center"
                android:text="Type"
                android:textAlignment="center"
                android:textColor="#757373"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ivSale"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:layout_below="@+id/ivDining"
                android:layout_alignLeft="@+id/tvname"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/version" />

            <TextView
                android:id="@+id/tvversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivSale"
                android:layout_alignBottom="@+id/ivSale"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivSale"
                android:gravity="center"
                android:text="Version"
                android:textAlignment="center"
                android:textColor="#757373"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ivView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_arrow_forward" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>